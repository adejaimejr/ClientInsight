# Configurações de conexão com o MongoDB
MONGODB_URI=mongodb://usuario:senha@servidor:porta/database
MONGODB_DATABASE=nome_do_banco

# Cliente para validação
CLIENTE_TESTE=0000000000

# Configurações de processamento
PROCESSAR_TODOS=true
TAMANHO_LOTE=20
USAR_CACHE=false

# Processamento em paralelo
USAR_PARALELO=false
NUM_THREADS=2

# Configurações da API Linx e-Millennium
LINX_API_URL=https://api.exemplo.com
LINX_API_KEY=sua_chave_api

# Configurações de log
MOSTRAR_LOGS=false

# Configurações de Classificação de Clientes

# Pesos dos critérios (soma deve ser 1.0)
PESO_FATURAMENTO=0.40
PESO_FREQUENCIA=0.25
PESO_PONTUALIDADE=0.15
PESO_VOLUME_PECAS=0.10
PESO_DIVERSIFICACAO=0.10

# Nomes das categorias (personalizáveis)
CATEGORIA_DIAMANTE=Diamante
CATEGORIA_OURO=Ouro
CATEGORIA_PRATA=Prata
CATEGORIA_BRONZE=Bronze

# Limites de pontuação para cada categoria
LIMITE_DIAMANTE=9.1
LIMITE_OURO=7.5
LIMITE_PRATA=5.0
LIMITE_BRONZE=0.0

# Faixas de pontuação - Faturamento (em R$)
FATURAMENTO_FAIXA_10=50000
FATURAMENTO_FAIXA_8=30001
FATURAMENTO_FAIXA_6=15001
FATURAMENTO_FAIXA_4=5001

# Faixas de pontuação - Volume de peças
PECAS_FAIXA_10=500
PECAS_FAIXA_8=201
PECAS_FAIXA_6=101
PECAS_FAIXA_4=50

# Faixas de pontuação - Diversificação de marcas
MARCAS_PARA_10_PONTOS=6        # 6 ou mais marcas = 10 pontos
MARCAS_PARA_8_PONTOS=4-5       # 4 ou 5 marcas = 8 pontos
MARCAS_PARA_6_PONTOS=2-3       # 2 ou 3 marcas = 6 pontos
MARCAS_PARA_4_PONTOS=1         # 1 marca = 4 pontos

# Faixas de pontuação - Pontualidade (em %)
PONTUALIDADE_FAIXA_10=95
PONTUALIDADE_FAIXA_8=85
PONTUALIDADE_FAIXA_6=75
PONTUALIDADE_FAIXA_4=60
